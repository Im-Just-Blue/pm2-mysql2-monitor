{
  "name": "pm2-mysql2-monitor",
  "version": "1.1.0",
  "description": "MySQL Monitor for PM2",
  "dependencies": {
    "hwmon": "github:didil/node-hwmon",
    "mysql2": "^2.2.5",
    "pmx": "^1.6.7",
    "shell-escape": "^0.2.0",
    "shelljs": "^0.7.8"
  },
  "config": {
    "host": "localhost",
    "port": 3306,
    "user": "pm2_monitor",
    "password": "",
    "refreshRate": 1000,
    "dbDiskName": "sda",
    "slowQueriesLog": "/var/log/mysql/slow.log",
    "generalLog": "/var/log/mysql/general.log",
    "lastQueriesSize": 100,
    "errorLog": "/var/log/mysql/error.log",
    "lastErrorsSize": 100
  },
  "apps": [
    {
      "merge_logs": true,
      "script": "index.js"
    }
  ],
  "author": "Keymetrics Inc.",
  "contributor": [{ "name"  : "Eric Reinhardt",
                    "email" : "eric@imjustblue.com",
                    "url"   : "https://www.imjustblue.com/"
                  }],
  "license": "MIT"
}
